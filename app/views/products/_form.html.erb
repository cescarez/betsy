<%= form_with model: @product, class: 'product_form' do |f| %>


  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :inventory %>
  <%= f.text_field :inventory %>


  <%= f.submit "Submit", class: "product-button" %>
<% end %>