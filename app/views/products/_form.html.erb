<%= form_with model: @product, class: 'product_form' do |f| %>


  <div>
    <%= f.label :categories %>
    <%= collection_check_boxes :product, :categories, Category.all, :id, :name do |b| %>
    <%= b.check_box %>
      <%= b.label %>
    <% end %>
  </div>


  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :inventory %>
  <%= f.text_field :inventory %>

  <%= f.label :image %>
  <%= f.file_field :image %>


  <%= f.submit "Submit", class: "product-button" %>
<% end %>