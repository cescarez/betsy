<% if @user.products.nil? %>
  <h3>
    <%= "#{@user.name} does not currently have celestial bodies for sale" %>
  </h3>
<% else %>
  <h3>
  <%= "#{@user.name} is currently selling:" %>
  </h3>
  <table>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Inventory</th>
      <% if @user.id == session[:user_id]%>
        <th>Edit</th>
        <th>Retire</th>
      <%end %>
    </tr>
    <% @user.products.each do |product| %>
      <tr>
        <td>
          <%= product.category %>
        </td>
        <td>
          <%= product.name %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <%= product.description %>
        </td>
        <td>
          <%= product.inventory %>
        </td>
        <% if @user.id == session[:user_id]%>
          <td>Edit</td>
          <td>Retire</td>
        <%end %>
      </tr>
    <% end %>
  </table>
<% end %>
