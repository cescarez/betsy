<section class="shipping-info">
  <h2><%= action_name %> Shipping Info</h2>
  <%= form_with model: @shipping_info do |f| %>
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>

    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, required: true %>
    </div>
    <div class="form-group">
      <%= f.label :street %>
      <%= f.text_field :street, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :city %>
      <%= f.text_field :city, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :state %>
      <%= f.text_field :state, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :zipcode %>
      <%= f.text_field :zipcode, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :country %>
      <%= f.text_field :country, required: true %>
    </div>

    <div class="form-group">
      <%= f.submit "Save Shipping Info", class: "btn btn-secondary", data: {confirm: "Are you sure you want to submit this shipping info? You will be redirected to billing info."} %>
    </div>
  <% end %>
</section>
