<section class="shipping-info">
  <h2><%= action_name %> Shipping Info</h2>
  <%= form_with model: @shipping_info do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %>

    <%= f.label :street %>
    <%= f.text_field :street %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>

    <%= f.label :country %>
    <%= f.text_field :country %>

    <%= f.submit "Save Shipping Info", class: "btn btn-secondary", data: {confirm: "Are you sure you want to submit this shipping info? You will be redirected to billing info."} %>
  <% end %>
</section>
