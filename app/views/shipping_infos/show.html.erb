<section class="shipping-info-table">
  <table class="table">
    <thead>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Street Address</th>
      <th scope="col">City</th>
      <th scope="col">State</th>
      <th scope="col">Zipcode</th>
      <th scope="col">Country</th>
    </thead>
    <tbody>
      <tr>
        <td><%= @shipping_info.first_name %></td>
        <td><%= @shipping_info.last_name %></td>
        <td><%= @shipping_info.street %></td>
        <td><%= @shipping_info.city %></td>
        <td><%= @shipping_info.state %></td>
        <td><%= @shipping_info.zipcode %></td>
        <td><%= @shipping_info.country %></td>
      </tr>
    </tbody>
  </table>
</section>
<section class="shipping-buttons">
  <%= button_to "Edit this shipping information", edit_shipping_info_path(@shipping_info.id), method: :get %>
  <%= button_to "Delete this shipping information", shipping_info_path(@shipping_info.id), method: :delete,data:{confirm: 'Are you sure you would like to delete this information?'} %>
  <%= button_to "Return to Shopping Cart", checkout_order_path(@order.id) %>
</section>