<%= form_with model: Review.new, url: product_reviews_path(@product)  do |f| %>
  <div>
    <%= f.label :rating, "Rate Product: " %>
    <%= f.select :rating, [
        ['⭐️', 1],
        ['⭐⭐', 2],
        ['⭐⭐⭐', 3],
        ['⭐⭐⭐⭐', 4],
        ['⭐⭐⭐⭐⭐', 5],
    ]
        %>
  </div>
  <div>
    <%= f.label :feedback %>
    <%= f.text_area :description, required: true %>
  </div>
  <%= f.submit action_name, class:'button-style' %>
<% end %>