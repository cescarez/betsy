<section class=”orders-index page-title”>
  <h2>Orders</h2>
</section>
<section class="orders-index orders-table">
  <%= form_with model: @order, url: order_status_filter_path, class:"order-status-filter" do |f| %>
    <%= f.label :status %>
    <%= f.select :status, ["", "pending", "paid", "complete", "cancelled"] %>
    <%= f.submit "Filter Orders" %>
  <% end %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Order #</th>
        <th scope="col">Items Ordered</th>
        <th scope="col">Order Total</th>
        <th scope="col">Order Status</th>
        <th scope="col">Date Placed</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr class="table-active">
          <td><em>Orders Summary</em></td>
          <td><%= @orders.length %></td>
          <td><%= format_money(@orders.sum { |order| order.total_cost(session[:user_id]) }) %></td>
          <td colspan="2"></td> #empty cell to span last two columns
        </tr>
        <tr>
          <th scope="row"><%= link_to order.id, order_path(order.id) %></th>
          <td>
            <ul>
              <% order.order_items.each do |order_item| %>
                <% if order_item.product.user.id == session[:user_id] %>
                  <li><%= number_to_currency(order_item.quantity * order_item.product.price) %> for <%= order_item.quantity %> of <%= order_item.product.name %> (<%= number_to_currency(order_item.product.price) %>/each)</li>
                <% end %>
              <% end %>
            </ul>
          </td>
          <td><%= format_money(order.total_cost(session[:user_id])) %></td>
          <td><%= order.status %></td>
          <td><%= order.complete_date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
