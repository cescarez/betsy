<section class=”orders-index page-title”>
  <h2>Orders</h2>
</section>
<section class="orders-index orders-table">
  <%= form_with model: @order, url: order_filter_status_path, class:"order-status-filter" do |f| %>
    <%= f.label :status %>
    <%= f.check_box_tag :status, "pending", checked = false %>
    <%= f.check_box_tag :status, "paid", checked = false %>
    <%= f.check_box_tag :status, "complete", checked = false %>
    <%= f.check_box_tag :status, "cancelled", checked = false %>
    <%= f.submit "Filter Orders" %>
  <% end %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Order #</th>
        <th scope="col">Items Ordered</th>
        <th scope="col">Order Total</th>
        <th scope="col">Order Status</th>
        <th scope="col">Date Placed</th>
      </tr>
    </thead>
    <tbody>
      #TODO: add filter to all orders to limit view to logged in user
      <% @orders.each do |order| %>
        <% if order && order.status == status_filter %>
          <tr class="table-active">
            <td><em><%= status_filter %> Orders Summary</em></td>
          </tr>
          <tr>
            <th scope="row"><%= link_to order.id, order_path(order.id) %></th>
            <td>
              <ul>
                <% order.order_items.each do |order_item| %>
                  <% if order_item %>
                    <li>$<%= order_item.quantity * order_item.product.price %> for <%= order_item.quantity %> of <%= order_item.product.name %></li>
                  <% end %>
                <% end %>
              </ul>
            </td>
            <td><%= order.total_cost %></td>
            <td><%= order.status %></td>
            <td><%= order.complete_date %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</section>
