<section class=”orders-show page-title”>
  <h2>Order #<%= @order.id %></h2>
  <h4>Submitted on <%= @order.submit_date %></h4>
</section>
<section class="orders-show order-table">
  <h4>Order Status: <%= @order.status %></h4>
  <%= button_to "Order has been Shipped", complete_order_path(@order.id), class:"btn btn-success"  %>
  <table class="table">
    <thead>
    <tr>
      <th scope="col">Item</th>
      <th scope="col">Number Ordered</th>
      <th scope="col">Line Item Cost</th>
    </tr>
    </thead>
    <tbody>
      <% if @order %>
        <% @order.order_items.each do |order_item| %>
          <% if order_item %>
            <tr>
              <td><%= link_to order_item.product.name, product_path(order_item.product_id) %></td>
              <td><%= order_item.quantity %></td>
              <td><%= order_item.quantity * order_item.product.price %></td>
            </tr>
          <% end %>
        <% end %>
        <tr class="table-active">
          <td colspan="2">Order Summary</td>
          <td><%= @order.order_items.length %></td>
          <td><%= @order.total_cost %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
